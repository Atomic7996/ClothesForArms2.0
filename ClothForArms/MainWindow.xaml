<Window x:Class="ClothForArms.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClothForArms"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="1200"
        MinHeight="900" MinWidth="1200"
        WindowStartupLocation="CenterScreen" Icon="Resources/Одежда для ручек.png">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="0.5*"/>
        </Grid.RowDefinitions>

        <Rectangle Grid.Row="0"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image Source="Resources/Одежда для ручек.png"/>
            <Label Content="Одежда для ручек"/>
        </StackPanel>
        <Button Name="btnBack" Content="Назад" HorizontalAlignment="Right" Click="btnBack_Click"/>

        <Frame Name="mainFrame" Grid.Row="1" NavigationUIVisibility="Hidden"/>

        <Rectangle Grid.Row="2"/>

    </Grid>
</Window>
