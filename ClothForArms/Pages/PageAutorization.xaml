<Page x:Class="LopuhV2.Pages.PageAutorization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LopuhV2.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageAutorization">

    <Grid>
        <Label Content="Авторизация" VerticalAlignment="Top" HorizontalAlignment="Center"/>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="Логин" Height="40"/>
                <TextBlock Text="Пароль" Height="40"/>
            </StackPanel>

            <StackPanel>
                <TextBox Name="tbLogin"/>
                <TextBox Name="tbPass"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Center">
            <Button Name="btnEnter" Content="Войти" Click="btnEnter_Click"/>
            <Button Name="btnGuest" Content="Как гость" Click="btnGuest_Click"/>
        </StackPanel>
    </Grid>
</Page>
